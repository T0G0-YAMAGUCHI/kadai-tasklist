<h1>id:<%=@task.id %>の詳細一覧</h1>

<table class="table table-borderd">
  <tr>
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  
  <tr>
    <th>ステータス</th>
    <td><%= @task.status %></td>
  </tr>
  
  <tr>
    <th>タスク</th>
    <td><%= @task.content %></td>
  </tr>
</table>


<%= link_to "タスク編集" , edit_task_path(@task) , class:"btn btn-default" %>
